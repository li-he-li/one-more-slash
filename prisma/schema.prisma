generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  secondmeId    String    @unique
  accessToken   String
  refreshToken  String?
  expiresAt     DateTime?
  name          String?
  email         String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Product {
  id           String   @id @default(cuid())
  title        String
  description  String?
  currentPrice Float
  targetPrice  Float
  publishPrice Float
  progress     Int
  imageUrl     String?
  status       String   @default("active")
  userId       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("products")
}
